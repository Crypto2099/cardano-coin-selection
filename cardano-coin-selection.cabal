name:                cardano-coin-selection
version:             0.0.1
synopsis:            Algorithms for coin selection and fee balancing.
description:         Please see README.md
homepage:            https://github.com/input-output-hk/cardano-coin-selection
author:              IOHK Engineering Team
maintainer:          operations@iohk.io
copyright:           2018-2020 IOHK
license:             Apache-2.0
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      base
    , bytestring
    , containers
    , cryptonite
    , deepseq
    , extra
    , fmt
    , memory
    , random
    , text
    , transformers
    , vector
  hs-source-dirs:
      src
  exposed-modules:
      Cardano.CoinSelection
      Cardano.CoinSelection.LargestFirst
      Cardano.CoinSelection.Migration
      Cardano.CoinSelection.Random
      Cardano.Fee
      Cardano.Types
      Cardano.Unsafe
      Data.Quantity
      Data.Vector.Shuffle

test-suite unit
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
  if (!flag(development))
    ghc-options:
      -O2
      -Werror
  build-depends:
      base
    , bytestring
    , cardano-coin-selection
    , containers
    , cryptonite
    , deepseq
    , extra
    , fmt
    , hspec
    , memory
    , QuickCheck
    , random
    , text
    , transformers
    , vector
  build-tools:
      hspec-discover
  type:
      exitcode-stdio-1.0
  hs-source-dirs:
      test
  main-is:
      Spec.hs
  other-modules:
      Cardano.CoinSelection.LargestFirstSpec
      Cardano.CoinSelection.MigrationSpec
      Cardano.CoinSelection.RandomSpec
      Cardano.CoinSelectionSpec
      Cardano.FeeSpec
      Cardano.TypesSpec
      Data.Vector.ShuffleSpec
